                    </ul>
                </div>
                @if (Context.Session.GetString("UserName") == null)
                {
                    <div class="header__top__right__auth">
                        <a asp-action="LogIn" asp-controller="User"> <i class="fa fa-user"></i> Đăng nhập</a> | <a asp-action="Register" asp-controller="User")">Đăng ký</a>
                    </div>
                }
                else
                {
                    <div class="header__top__right__language">
                        <div><i class="fa fa-user"></i>@Context.Session.GetString("UserName")</div>
                        <span class="arrow_carrot-down"></span>
                        <ul>

                            <li><a asp-action="LogOut" asp-contrller="Home">Thoát</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
