@model TinTuc

@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<TinTuc> otherBlogs = (List<TinTuc>)ViewBag.otherBlogs;
}

<section class="blog-details spad">
    <div class="container">
        <div class="row">
            @* Các tin tức cùng thể loại *@
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form asp-action="Search" asp-controller="Blog">
                            <input type="text" name="keyWord" placeholder="Tin tức dinh dưỡng">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>DANH MỤC</h4>
                        <div class="blog__sidebar__item">
                            <ul>
                                <li><a href="#">Dinh dưỡng thiết yếu</a></li>
                                <li><a href="#">Rau hữu cơ</a></li>
                                <li><a href="#">Rau củ an toàn</a></li>
                                <li><a href="#">Thịt cá dân dã</a></li>
                                <li><a href="#">Trái cây</a></li>
                                <li><a href="#">Đồ sơ chế</a></li>
                                <li><a href="#">Hải sản</a></li>
                                <li><a href="#">Hàng khô</a></li>
                            </ul>
                        </div>
                        <div class="blog__sidebar__item">
                            <h4>Tin tức nổi bật</h4>

                            <div class="blog__sidebar__recent">
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="blog__sidebar__recent__item__text">
                                        <h6>
                                            @foreach (var item in otherBlogs)
                                            {
                                                <div class="blog__sidebar__recent__item__pic">
                                                    <img src="@item.Anh" alt="Anh tin nổi bật">
                                                </div>
                                                <a style="font-size:20px" asp-action="BlogDetails" asp-controller="Blog" asp-route-id="@item.Ma">@item.MotaNgan</a>
                                                <span>@Model.NgayDang</span>
                                                <p></p> 
                                            }
                                        </h6>
                                    </div>
                                </a>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

            @* Mô tả chi tiết tin tức*@
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <span>
                        <h3>@Model.MotaNgan</h3>
                    </span>
                    <br />
                    <p>
                        @Html.Raw(Model.Mota)
                    </p>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                </div>
                                <div class="blog__details__author__text">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <div class="blog__details__social">
                                    <a href="https://www.facebook.com/phungdinhminh1999/"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


