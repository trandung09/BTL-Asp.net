@model IEnumerable<TinTuc>
@{
    var listBlog = (List<TinTuc>)ViewBag.listBlog;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title from-blog__title">
                <h2>Blog nấu ăn</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in listBlog)
        {
            if (item.TieuBieu == true)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@item.Anh" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.NgayDang</li>
                                <li><i class="fa fa-comment-o"></i> 5</li>
                            </ul>
                            <h5>
                                <a asp-action="BlogDetails" asp-controller="Blog" asp-route-id="@item.Ma">@item.MotaNgan</a>
                            </h5>
                            @*<p>@item.Mota</p>*@
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>

