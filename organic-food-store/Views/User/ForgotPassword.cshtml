@model IEnumerable<KhachHang>

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Home">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="ForgotPassword" asp-controller="User">Quên mật khẩu</a>
            </li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Cài đặt lại mật khẩu</h2>
            </div>
        </div>
    </div>
    <div class="dktk">
        @if (ViewBag.message != null)
        {
            <div class="thongbao alert alert-danger">@ViewBag.message</div>
        }
        <form asp-action="ForgotPassword" asp-controller="User" method="post">
            <div class="form-group">
                <input type="email" class="form-control form-control-user" id="exampleInputEmail" name="recipientEmail" required placeholder="Email">
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Gửi" />
            <br />
            <a asp-action="LogIn" asp-controller="User">Bỏ qua</a>
        </form>
    </div>
</div>

