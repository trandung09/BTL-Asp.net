@model ChuyenMuc

@{
    ViewBag.Title = "Admin - Sửa chuyên mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Sửa chuyên mục</h2>

<form asp-area="Admin" asp-action="Edit" asp-controller="BlogCategory" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Ma" />

    <div class="form-group row">
        <label asp-for="Ten" class="control-label col-md-2"><b>Tên</b></label>
        <div class="col-md-10">
            <input asp-for="Ten" class="form-control" />
            <span asp-validation-for="Ten" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Mota" class="control-label col-md-2"><b>Mô tả</b></label>
        <div class="col-md-10">
            <input asp-for="Mota" class="form-control" />
            <span asp-validation-for="Mota" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MaCt" class="control-label col-md-2"><b>Mã CT</b></label>
        <div class="col-md-10">
            <input asp-for="MaCt" class="form-control" />
            <span asp-validation-for="MaCt" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Lưu</button>
        </div>
    </div>
</form>

<div class="mt-3">
    <a asp-area="Admin" asp-action="Index" asp-controller="BlogCategory" class="btn btn-secondary">Trở về danh sách</a>
</div>
