@model PagedList.IPagedList<ChuyenMuc>
@using PagedList.Mvc

@{
    ViewBag.Title = "Admin - Tìm kiếm chuyên mục tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tìm kiếm chuyên mục</h2>

<form asp-action="Search" asp-controller="BlogCategory" method="post" class="form-inline">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin cần tìm</label>
        <input type="text" class="form-control" name="keyWord" id="example" placeholder="Nhập tên chuyên mục cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ten</td>
                <td>@item.Mota</td>
                <td>
                    <a class="btn btn-success" asp-area="Admin" asp-controller="BlogCategory" asp-action="Edit" asp-route-id="@item.Ma">Sửa</a> |
                    <a class="btn btn-success" asp-area="Admin" asp-controller="BlogCategory" asp-action="Details" asp-route-id="@item.Ma">Chi tiết</a> |
                    <a class="btn btn-success" asp-area="Admin" asp-controller="BlogCategory" asp-action="Delete" asp-route-id="@item.Ma">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
