@model ChuyenMuc

@{
    ViewBag.Title = "Admin - Xóa chuyên mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Xoá chuyên mục</h2>
<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Tên</dt>
        <dd class="col-sm-9">
            <span>@Model.Ten</span>
        </dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">
            <span>@Model.Mota</span>
        </dd>

        <dt class="col-sm-3">Mã CT</dt>
        <dd class="col-sm-9">
            <span>@Model.MaCt</span>
        </dd>
    </dl>

    <form asp-area="Admin" asp-action="Delete" asp-controller="BlogCategory" method="post">
        @Html.AntiForgeryToken() <!-- Thêm mã bảo vệ CSRF -->
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-area="Admin" asp-action="Index" asp-controller="BlogCategory" class="btn btn-secondary">Trở về danh sách</a>
        </div>
    </form>
</div>
