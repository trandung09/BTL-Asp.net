@model ChuyenMuc

@{
    ViewBag.Title = "Admin - Thêm mới chuyên mục";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm chuyên mục mới</h2>

<form asp-area="Admin" asp-action="Create" asp-controller="BlogCategory" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="@Model.Ten" class="control-label col-md-2">Tên chuyên mục</label>
        <div class="col-md-10">
            <input asp-for="@Model.Ten" class="form-control" required placeholder="Nhập tên chuyên mục" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Mota" class="control-label col-md-2">Mô tả</label>
        <div class="col-md-10">
            <textarea asp-for="@Model.Mota" class="form-control"></textarea>
            <script type="text/javascript">
                CKEDITOR.replace("Mota");
            </script>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.MaCt" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="@Model.MaCt" class="form-control" />
            <span asp-validation-for="@Model.MaCt" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Thêm</button>
        </div>
    </div>
</form>

<div>
    <a asp-area="Admin" asp-action="Index" asp-controller="BlogCategory" class="btn btn-success">Trở về danh sách</a>
</div>
