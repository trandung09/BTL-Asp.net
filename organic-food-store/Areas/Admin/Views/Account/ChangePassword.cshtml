@{
    ViewBag.Title = "Admin - Thay đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3 offset-md-3">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Thay đổi mật khẩu</h1>
                </div>
                @if (ViewBag.message != null)
                {
                    <div class="thongbao alert alert-danger">@ViewBag.message</div>
                }
                <form class="user" asp-action="ChangePassword" asp-controller="Account" asp-area="Admin" method="post">
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Mật khẩu cũ" name="oldPassword" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" name="newPassword" required placeholder="Mật khẩu mới">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" name="confirmNewPassword" required placeholder="Nhập lại mật khẩu">
                    </div>
                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Lưu mật khẩu" />
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('.thongbao').delay(5000).fadeOut(300);
</script>

