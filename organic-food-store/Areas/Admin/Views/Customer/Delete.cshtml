@model KhachHang

@{
    ViewBag.Title = "Admin - Xóa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa thông tin khách hàng</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Họ và tên</dt>
        <dd>@Html.DisplayFor(model => model.Ten)</dd>

        <dt>Địa chỉ</dt>
        <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt>Điện thoại</dt>
        <dd>@Html.DisplayFor(model => model.DienThoai)</dd>

        <dt>Email</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Mật khẩu</dt>
        <dd>@Html.DisplayFor(model => model.Password)</dd>
    </dl>

    <p class="text-danger"><strong>Bạn có chắc chắn muốn xóa khách hàng này không?</strong></p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-action="Index" asp-controller="Customer">Trở về danh sách</a>
        </div>
    }
</div>
