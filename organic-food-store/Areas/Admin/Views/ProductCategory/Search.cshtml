@model IEnumerable<LoaiSp>

@{
    ViewBag.Title = "Admin - Tìm kiếm loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Tìm kiếm loại sản phẩm</h2>
<form class="form-inline" asp-action="Search" asp-controller="ProductCategory" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin cần tìm</label>
        <input type="text" class="form-control" name="keyWord" id="example" placeholder="nhập tên Loại sp cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>

</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                <a class="btn btn-success" asp-area="Admin" asp-controller="ProductCategory" asp-action="Edit" asp-route-id="@item.Ma">Sửa</a> |
                <a class="btn btn-success" asp-area="Admin" asp-controller="ProductCategory" asp-action="Details" asp-route-id="@item.Ma">Chi tiết</a> |
                <a class="btn btn-success" asp-area="Admin" asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@item.Ma">Xoá</a>
            </td>
        </tr>
    }

</table>
