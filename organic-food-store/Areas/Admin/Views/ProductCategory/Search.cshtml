@model IEnumerable<LoaiSp>

@{
    ViewBag.Title = "Admin - Tìm kiếm loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Tìm kiếm loại sản phẩm</h2>

<form class="form-inline justify-content-center mb-4" asp-action="Search" asp-controller="ProductCategory" method="post">
    <div class="form-group">
        <label for="exampleInputName2" class="mr-2">Nhập thông tin cần tìm:</label>
        <input type="text" class="form-control mr-2" name="keyWord" id="example" placeholder="Nhập tên loại sản phẩm cần tìm" />
        <button type="submit" class="btn btn-success">Tìm</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Ten)</th>
            <th>@Html.DisplayNameFor(model => model.First().Mota)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ProductCategory" asp-action="Edit" asp-route-id="@item.Ma">Sửa</a>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="ProductCategory" asp-action="Details" asp-route-id="@item.Ma">Chi tiết</a>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@item.Ma">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
