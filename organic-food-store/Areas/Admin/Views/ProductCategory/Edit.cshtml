@model LoaiSp

@{
    ViewBag.Title = "Admin - Chỉnh sửa loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Sửa thông tin sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @Html.HiddenFor(model => model.Ma)

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại sản phẩm</label>
            <div class="col-md-10">
                <input type="text" value="@Model.Ten" name="ten" class="form-control" required placeholder="Nhập tên loại sản phẩm" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mô tả loại sản phẩm" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="text-center">
    <a asp-area="Admin" asp-action="Index" asp-controller="ProductCategory" class="btn btn-secondary">Trở về danh sách</a>
</div>
