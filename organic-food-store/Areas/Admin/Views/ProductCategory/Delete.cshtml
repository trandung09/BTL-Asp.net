@model LoaiSp

@{
    ViewBag.Title = "Admin - Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Xoá Loại Sản Phẩm</h2>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Mota)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-area="Admin" asp-action="Index" asp-controller="ProductCategory" class="btn btn-primary">Trở về danh sách</a>
        </div>
    }
</div>
