@model IEnumerable<TinTuc>

@{
    ViewBag.Title = "Admin - Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tin </h2>

<p>
    <a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-success">Thêm tin mới</a>
</p>
<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-2">Tên Tin</label>
        </th>
        <th>
            <label class="control-label col-md-2">Mô tả</label>
        </th>
        <th>
            <label class="control-label col-md-2">Ngày đăng</label>
        </th>
        <th>
            <label class="control-label col-md-2">Ảnh</label>
        </th>
        <th>
            <label class="control-label col-md-2">Người đăng</label>
        </th>
        <th>
            <label class="control-label col-md-2">Tiêu biểu</label>
        </th>
        <th>
            <label class="control-label col-md-2">Loại tin</label>
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MotaNgan
            </td>
            <td>
                @Html.Raw(item.Mota)
            </td>
            <td>
                @Convert.ToDateTime(item.NgayDang)
            </td>
            <td>
                <img src="@item.Anh" width="100" height="100" />
            </td>
            <td>
                @item.NguoiDang
            </td>
            <td>

                @if (item.TieuBieu == true)
                {
                    <span>Tiêu biểu</span>
                }
                else
                {
                    <span>Không tiêu biểu</span>
                }

            </td>
            <td>
                @item.LoaiTin
            </td>
            <td>
                <a class="btn btn-success" asp-area="Admin" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.Ma">Sửa</a>
                <a class="btn btn-success" asp-area="Admin" asp-action="Details" asp-controller="Blog" asp-route-id="@item.Ma">Chi tiết</a>
                <a class="btn btn-success" asp-area="Admin" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Ma">Sửa</a>
            </td>
        </tr>
    }

</table>