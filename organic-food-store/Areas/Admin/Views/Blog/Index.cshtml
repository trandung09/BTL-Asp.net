@model IEnumerable<TinTuc>

@{
    ViewBag.Title = "Admin - Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Danh sách tin tức</h2>

<p>
    <a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-success mb-3">Thêm tin mới</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tên Tin</th>
            <th>Mô tả</th>
            <th>Ngày đăng</th>
            <th>Ảnh</th>
            <th>Người đăng</th>
            <th>Tiêu biểu</th>
            <th>Loại tin</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MotaNgan</td>
                <td>@Html.Raw(item.Mota)</td>
                <td>@item.NgayDang</td>
                <td>
                    <img src="@item.Anh" class="img-thumbnail" width="100" height="100" />
                </td>
                <td>@item.NguoiDang</td>
                <td>
                    @if (item.TieuBieu == true)
                    {
                        <span class="badge bg-success">Tiêu biểu</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không tiêu biểu</span>
                    }
                </td>
                <td>@item.LoaiTin</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.Ma">Sửa</a>
                    <a class="btn btn-info btn-sm" asp-area="Admin" asp-action="Details" asp-controller="Blog" asp-route-id="@item.Ma">Chi tiết</a>
                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Ma">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
