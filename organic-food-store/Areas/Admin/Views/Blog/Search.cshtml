@model PagedList.IPagedList<TinTuc>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Admin - Tìm kiếm tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tìm kiếm tin tức</h2>

<form class="form-inline" asp-area="Admin" asp-action="Search" asp-controller="Blog" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin</label>
        <input type="text" class="form-control" name="keyWord" id="example" placeholder="Nhập tiêu đề cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>
</form>
@if (ViewBag.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                Mô tả ngắn
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày đăng
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Người đăng
            </th>
            <th>
                Tiêu biếu
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MotaNgan)
                </td>
                <td>
                    @Html.Raw(item.Mota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDang)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Anh)" width="100px" height="100px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiDang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuBieu)
                </td>
                <td>
                    <a class="btn btn-success" asp-area="Admin" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.Ma">Sửa</a>
                    <a class="btn btn-success" asp-area="Admin" asp-action="Details" asp-controller="Blog" asp-route-id="@item.Ma">Chi tiết</a>
                    <a class="btn btn-success" asp-area="Admin" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Ma">Sửa</a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <h2 style="text-align:center; color:red">Không tìm thấy tên yêu cầu</h2>
}
