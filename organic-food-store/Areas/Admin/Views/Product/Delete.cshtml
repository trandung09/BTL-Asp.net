@model Sp

@{
    ViewBag.Title = "Admin - Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3>Xoá sản phẩm</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ten)
        </dd>

        <dt>
            Mô tả sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Ảnh nhỏ
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.AnhNho)" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 1
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Anh1)" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 2
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Anh2)" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 3
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Anh3)" width="100" height="100" />
        </dd>

        <dt>
            Thông số kỹ thuật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tskt)
        </dd>

        <dt>
            Tiêu biểu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuBieu)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            Xoá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Xoa)
        </dd>

        <dt>
            Hãng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hang)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Khuyến mãi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhuyenMai)
        </dd>

        <dt>
            Ngày đăng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDang)
        </dd>

        <dt>
            Đơn vị tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dvt)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-success" />
            <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn btn-success">Trở về danh sách</a>
        </div>
    }
</div>
