@model Sp

@{
    ViewBag.Title = "Admin - Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Xoá sản phẩm</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ten)
        </dd>

        <dt>
            Mô tả sản phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Ảnh nhỏ
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.AnhNho)" alt="Ảnh nhỏ" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 1
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.Anh1)" alt="Ảnh 1" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 2
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.Anh2)" alt="Ảnh 2" width="100" height="100" />
        </dd>

        <dt>
            Ảnh 3
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.Anh3)" alt="Ảnh 3" width="100" height="100" />
        </dd>

        <dt>
            Thông số kỹ thuật
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tskt)
        </dd>

        <dt>
            Tiêu biểu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TieuBieu)
        </dd>

        <dt>
            Trạng thái
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            Hãng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hang)
        </dd>

        <dt>
            Giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Khuyến mãi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KhuyenMai)
        </dd>

        <dt>
            Ngày đăng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NgayDang)
        </dd>

        <dt>
            Đơn vị tính
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dvt)
        </dd>
    </dl>

    <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Xoá" class="btn btn-danger" />
            <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn btn-secondary">Trở về danh sách</a>
        </div>
    }
</div>
