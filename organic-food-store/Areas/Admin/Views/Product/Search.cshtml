@model IEnumerable<Sp>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Admin - Tìm kiếm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Tìm kiếm thông tin về sản phẩm</h2>

<div class="container">
    <form class="form-inline mb-4" asp-area="Admin" asp-action="Search" asp-controller="Product" method="post">
        <div class="form-group mx-sm-3 mb-2">
            <label for="exampleInputName2" class="sr-only">Nhập thông tin cần tìm</label>
            <input type="text" class="form-control" name="keyWord" id="example" placeholder="Nhập tên sản phẩm">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Tìm</button>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Ảnh đại diện</th>
                <th>Tiêu biểu</th>
                <th>Trạng thái</th>
                <th>Xoá</th>
                <th>Giá</th>
                <th>Ngày đăng</th>
                <th>Đơn vị tính</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="9" class="text-center">Không tìm thấy sản phẩm nào phù hợp với từ khóa của bạn.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ten</td>
                        <td><img src="@item.AnhNho" class="img-thumbnail" width="100" height="100" /></td>
                        <td>
                            @if (@item.TieuBieu == true)
                            {
                                <span class="badge badge-success">Tiêu biểu</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Không tiêu biểu</span>
                            }
                        </td>
                        <td>
                            @if (@item.TrangThai == true)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Không hoạt động</span>
                            }
                        </td>
                        <td>
                            @if (@item.Xoa == true)
                            {
                                <span class="badge badge-warning">Có</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Không</span>
                            }
                        </td>
                        <td>@Convert.ToDecimal(item.Gia).ToString("##,#")</td>
                        <td>@item.NgayDang</td>
                        <td>@item.Dvt</td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Ma">Sửa</a>
                            <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@item.Ma">Chi tiết</a>
                            <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Ma">Xoá</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
